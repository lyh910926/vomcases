# to avoid an error message in renku
export LC_ALL='en_US.UTF-8'
export LANG='en_US.UTF-8'
module load null shared use.own conda
#
#files to be tracked with renku
exe_src=$2
dailyweather_input=$1


date

source activate renku

#inputs:
